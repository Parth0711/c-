@model IEnumerable<MotorCycle.Models.MotorCycleDetail>

@{
    ViewBag.Title = "Index";
}



    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MotorCycle.MotorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotorBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotorModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MotorCycle.MotorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MotorBrand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MotorModel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
